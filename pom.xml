            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>
        <!-- For hot reload of the web application when using an IDE Eclipse / IDEA -->
        <outputDirectory>${project.build.directory}/${project.build.finalName}/WEB-INF/classes</outputDirectory>

        <resources>
            <resource>
                <directory>src/main/appengine</directory>
                <filtering>true</filtering>
                <targetPath>${build.directory}/appengine</targetPath>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.6</version>
            </plugin>
            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>9.3.8.v20160314</version>
                <configuration>
                    <httpConnector>
                        <port>9092</port>
                    </httpConnector>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.google.cloud.tools</groupId>
                <artifactId>appengine-maven-plugin</artifactId>
                <version>1.2.1</version>
                <configuration>
                    <project>${appengine.app.id}</project>
                    <version>${appengine.app.version}</version>
                    <promote>false</promote>
                    <stage.appEngineDirectory>${project.build.directory}/appengine</stage.appEngineDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>deloy-module</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.cloudaware</groupId>
                <artifactId>endpoints-maven-plugin</artifactId>
                <version>1.0.1</version>
                <configuration>
                    <apis>
                        <param>com.cloudaware.cloudmine.amazon.autoscaling.AutoScalingApi</param>
                        <param>com.cloudaware.cloudmine.amazon.cloudformation.CloudFormationApi</param>
                        <param>com.cloudaware.cloudmine.amazon.cloudfront.CloudFrontApi</param>
                        <param>com.cloudaware.cloudmine.amazon.cloudsearch.CloudSearchApi</param>
                        <param>com.cloudaware.cloudmine.amazon.cloudtrail.CloudTrailApi</param>
                        <param>com.cloudaware.cloudmine.amazon.cloudwatch.CloudWatchApi</param>
                        <param>com.cloudaware.cloudmine.amazon.directconnect.DirectConnectApi</param>
                        <param>com.cloudaware.cloudmine.amazon.directoryservice.DirectoryServiceApi</param>
                        <param>com.cloudaware.cloudmine.amazon.dynamodb.DynamoDbApi</param>
                        <param>com.cloudaware.cloudmine.amazon.ec2.Ec2Api</param>
                        <param>com.cloudaware.cloudmine.amazon.ecs.EcsApi</param>
                        <param>com.cloudaware.cloudmine.amazon.elasticache.ElastiCacheApi</param>
                        <param>com.cloudaware.cloudmine.amazon.elasticbeanstalk.ElasticBeanstalkApi</param>
                        <param>com.cloudaware.cloudmine.amazon.elb.ElbApi</param>
                        <param>com.cloudaware.cloudmine.amazon.emr.EmrApi</param>
                        <param>com.cloudaware.cloudmine.amazon.glacier.GlacierApi</param>
                        <param>com.cloudaware.cloudmine.amazon.iam.IamApi</param>
                        <param>com.cloudaware.cloudmine.amazon.kms.KmsApi</param>
                        <param>com.cloudaware.cloudmine.amazon.lambda.LambdaApi</param>
                        <param>com.cloudaware.cloudmine.amazon.organizations.OrganizationsApi</param>
                        <param>com.cloudaware.cloudmine.amazon.rds.RdsApi</param>
                        <param>com.cloudaware.cloudmine.amazon.redshift.RedshiftApi</param>
                        <param>com.cloudaware.cloudmine.amazon.route53.Route53Api</param>
                        <param>com.cloudaware.cloudmine.amazon.s3.S3Api</param>
                        <param>com.cloudaware.cloudmine.amazon.ses.SesApi</param>
                        <param>com.cloudaware.cloudmine.amazon.sns.SnsApi</param>
                        <param>com.cloudaware.cloudmine.amazon.sqs.SqsApi</param>
                        <param>com.cloudaware.cloudmine.amazon.ssm.SsmApi</param>
                        <param>com.cloudaware.cloudmine.amazon.storagegateway.StorageGatewayApi</param>
                        <param>com.cloudaware.cloudmine.amazon.sts.StsApi</param>
                        <param>com.cloudaware.cloudmine.amazon.support.SupportApi</param>
                        <param>com.cloudaware.cloudmine.amazon.workspaces.WorkspacesApi</param>
                    </apis>
                </configuration>
                <executions>
                    <execution>
                        <id>gen-docs</id>
                        <goals>
                            <goal>package</goal>
                        </goals>
                        <configuration>
                            <hostname>${endpoints.service.name}</hostname>
                            <warPath>${project.build.directory}/${project.build.finalName}</warPath>
                            <outputSwaggerDoc>${project.basedir}/cloudmine-amazon.json</outputSwaggerDoc>
                            <outputDiscoveryDocs>${project.basedir}/discovery</outputDiscoveryDocs>
                        </configuration>
                    </execution>
                    <execution>
                        <id>gen-guice</id>
                        <goals>
                            <goal>generate-sources</goal>
                        </goals>
                        <configuration>
                            <outputClassName>com.cloudaware.cloudmine.amazon.war.GuiceSssModule</outputClassName>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>com.google.endpoints</groupId>
                        <artifactId>endpoints-framework-tools</artifactId>
                        <version>${endpoints-framework.version}</version>
                        <exclusions>
                            <exclusion>
                                <groupId>com.fasterxml.jackson.core</groupId>
                                <artifactId>jackson-databind</artifactId>
                            </exclusion>
                        </exclusions>
                    </dependency>
                    <dependency>
                        <groupId>com.fasterxml.jackson.core</groupId>
                        <artifactId>jackson-databind</artifactId>
                        <version>${jackson.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <version>2.17</version>
                <inherited>true</inherited>
                <configuration>
                    <configLocation>https://raw.githubusercontent.com/cloudaware/checkstyle-config/master/checkstyle.xml</configLocation>
                    <consoleOutput>true</consoleOutput>
                    <failsOnError>true</failsOnError>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>com.puppycrawl.tools</groupId>
                        <artifactId>checkstyle</artifactId>
                        <version>7.7</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>validate</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
